<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <com.goldenratio.commonweal.util.NormalFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/little_space"
        android:text="发布"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp" />

    <LinearLayout
        android:id="@+id/first_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/big_space">

            <ImageView
                android:id="@+id/compose_dy"
                android:layout_width="71dp"
                android:layout_height="71dp"
                android:src="@mipmap/tabbar_compose_review" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="爱心瞬间"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/big_space">

            <ImageView
                android:id="@+id/compose_good"
                android:layout_width="71dp"
                android:layout_height="71dp"
                android:src="@mipmap/tabbar_compose_friend" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="名人物品"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/compose_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/first_line"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/normal_space"
        android:src="@drawable/ic_clear_black_24dp" />
</LinearLayout>


