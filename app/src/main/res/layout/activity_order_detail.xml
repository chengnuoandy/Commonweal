<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/normal_space">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_selector" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/normal_space"
            android:layout_toRightOf="@+id/iv_back"
            android:background="@color/ordinary" />


        <TextView
            android:id="@+id/tv_registerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="订单详情"
            android:textColor="@color/black"
            android:textSize="@dimen/title_text_size" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/assist" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cashier__bg_header_info"
        android:orientation="horizontal"
        android:padding="@dimen/normal_space">

        <ImageView
            android:id="@+id/iv_good"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/normal_space">

            <TextView
                android:id="@+id/tv_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_loyalty_black_24dp"
                android:text="69"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_big" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_space"
                android:text="物品名称"
                android:textColor="@color/title_words" />
        </LinearLayout>
    </LinearLayout>


    <RadioButton
        android:id="@+id/rb_pay_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:button="@null"
        android:checked="true"
        android:drawableLeft="@drawable/ic_loyalty_black_24dp"
        android:drawablePadding="@dimen/normal_space"
        android:drawableRight="@android:drawable/btn_radio"
        android:padding="@dimen/normal_space"
        android:text="公益币支付"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/normal_space">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货地址"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/tv_change_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/little_space"
            android:drawableRight="@mipmap/news_cate_arr"
            android:gravity="right"
            android:text="修改默认收货地址" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_space"
        android:orientation="vertical"
        android:paddingLeft="@dimen/normal_space">

        <TextView
            android:id="@+id/tv_address_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名字"
            android:textSize="@dimen/text_size_default" />

        <TextView
            android:id="@+id/tv_address_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电话"
            android:textSize="@dimen/text_size_default" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址"
            android:textSize="@dimen/text_size_default" />
    </LinearLayout>

    <TextView
        android:id="@+id/btn_express"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_space"
        android:background="@drawable/default_fill"
        android:gravity="center"
        android:padding="@dimen/normal_space"
        android:text="查看快递"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_big_little"
        android:visibility="gone" />

    <TextView
        android:id="@+id/btn_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_space"
        android:background="@drawable/default_fill"
        android:gravity="center"
        android:padding="@dimen/normal_space"
        android:text="确认支付"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_big_little"
        android:visibility="gone" />
</LinearLayout>