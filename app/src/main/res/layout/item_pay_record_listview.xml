<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/normal_space">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_pr_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/little_space"
            android:text="名称"
            android:textSize="@dimen/text_size_default"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_pr_coin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="100公益币"
            android:textSize="@dimen/text_size_default"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_pr_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/little_space"
        android:text="支付状态" />

    <TextView
        android:id="@+id/tv_pr_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/little_space"
        android:paddingLeft="@dimen/little_space"
        android:text="2016-08-23 08:08:08" />
</LinearLayout>